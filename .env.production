# ====================== ONICHIP GPS - CONFIGURACIÓN DE PRODUCCIÓN ======================
# Variables de entorno para Ubuntu Server en AWS
# Copie este archivo como .env en cada directorio (backend/frontend)
# =====================================================================================

# === CONFIGURACIÓN DEL SISTEMA ===
NODE_ENV=production
HOSTNAME=aws-ubuntu-server

# === CONFIGURACIÓN DEL BACKEND (Puerto 3000) ===
BACKEND_PORT=3000
BACKEND_HOST=0.0.0.0

# === CONFIGURACIÓN DEL FRONTEND (Puerto 80) ===
FRONTEND_PORT=80
FRONTEND_HOST=0.0.0.0

# === CONFIGURACIÓN DE BASE DE DATOS ===
MONGODB_URI=mongodb://localhost:27017/onichip_gps
DB_NAME=onichip_gps
DB_CONNECTION_TIMEOUT=30000
DB_SOCKET_TIMEOUT=30000

# === CONFIGURACIÓN DE SEGURIDAD ===
JWT_SECRET=onichip_super_secret_key_production_2024_aws
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# === CONFIGURACIÓN DE CORS ===
CORS_ORIGIN=http://localhost:80
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# === CONFIGURACIÓN DE LOGS ===
LOG_LEVEL=info
LOG_FILE=/opt/onichip/logs/app.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# === CONFIGURACIÓN AWS ===
AWS_REGION=us-east-1
AWS_INSTANCE_TYPE=t2.micro

# === CONFIGURACIÓN DE MONITOREO ===
HEALTH_CHECK_INTERVAL=30000
MEMORY_LIMIT=500MB
CPU_LIMIT=80%

# === CONFIGURACIÓN DE RED ===
NETWORK_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000
HEADERS_TIMEOUT=60000

# === CONFIGURACIÓN DE CACHE ===
STATIC_CACHE_MAX_AGE=86400
API_CACHE_MAX_AGE=300

# === CONFIGURACIÓN DE UPLOADS ===
UPLOAD_LIMIT=10MB
UPLOAD_DIR=/opt/onichip/uploads

# === URLs DE SERVICIOS ===
BACKEND_URL=http://18.223.160.105:3000
FRONTEND_URL=http://localhost:80
MONGODB_URL=mongodb://localhost:27017

# === CONFIGURACIÓN DE GPS ===
GPS_UPDATE_INTERVAL=10000
GPS_PRECISION=6
GPS_TIMEOUT=30000

# === CONFIGURACIÓN DE DISPOSITIVOS ESP32 ===
ESP32_API_KEY=esp32_onichip_2024
ESP32_TIMEOUT=15000
ESP32_RETRY_ATTEMPTS=3

# === CONFIGURACIÓN DE NOTIFICACIONES ===
NOTIFICATION_ENABLED=true
EMAIL_ENABLED=false
SMS_ENABLED=false

# === CONFIGURACIÓN DE BACKUP ===
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION=7

# === INFORMACIÓN DEL PROYECTO ===
APP_NAME=OnichipGPS
APP_VERSION=1.0.0
APP_DESCRIPTION=Sistema de rastreo GPS para mascotas
APP_AUTHOR=OnichipTeam

# === CONFIGURACIÓN DE SYSTEMD ===
SERVICE_RESTART_DELAY=10
SERVICE_TIMEOUT=300
SERVICE_KILL_MODE=process
